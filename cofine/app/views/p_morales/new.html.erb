<legend>Crea un Nuevo Cliente</legend>
<%= form_for @pm, :as => :post, :url => p_morales_path, :html => {:class => "form-horizontal"} do |form| %>
		<div class="control-group">
			<div class="control-label">
				<%= form.label :nombre %>
			</div>
			<div class="controls">
			<%= form.text_field :nombre %>
			</div>
		</div>


		<div class="control-group">
			<div class="control-label">
				<%= form.label :actividad %>
			</div>
			<div class="controls">
			<%= form.text_field :actividad %>
			</div>
		</div>


		<div class="control-group">
			<div class="control-label">
				<%= form.label :nacionalidad %>
			</div>
			<div class="controls">
			<%= form.text_field :nacionalidad %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :rfc %>
			</div>
			<div class="controls">
			<%= form.text_field :rfc %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :fiel %>
			</div>
			<div class="controls">
			<%= form.text_field :fiel %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :domicilio_id %>
			</div>
			<div class="controls">
			<%= form.number_field :domicilio_id %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :telefono %>
			</div>
			<div class="controls">
			<%= form.text_field :telefono %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :mail %>
			</div>
			<div class="controls">
			<%= form.text_field :mail %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :nacimiento %>
			</div>
			<div class="controls">
			<%= form.date_select :nacimiento %>
			</div>
		</div>

		<div class="control-group">
			<div class="control-label">
				<%= form.label :admins_id %>
			</div>
			<div class="controls">
			<%= form.number_field :admins_id %>
			</div>
		</div>


	<div class="control-group">
		<div class="controls">
			<%= form.submit "Crear", :class => "btn btn-primary"%>
		</div>
	</div>
<% end %>






